@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Bloggengine.Models.Blogs>

<strong style="font-size:300%">
    MY BLOG LIST
</strong>
<h4>
    @Html.ActionLink("Create New", "Create")
</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Images)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Author)
        </th>
       <th></th>
    </tr>

   @foreach (var item in Model.Where(x => x.Author == User.Identity.Name)) {
        <tr>
        <td>
            <img src="@Url.Content(item.Images)" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Blog_Id }) |
            @Html.ActionLink("Blogpost", "BlogPost", new { id = item.Blog_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Blog_Id })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
