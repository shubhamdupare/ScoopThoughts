@model IEnumerable<Bloggengine.Models.Blogs>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<h4 class="text-success">@ViewBag.Message, @TempData["msg"]</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Images)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content(item.Images)" width="100" height="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>

        <td style="width:500px">
            <div style="max-height:120px; overflow: hidden; text-overflow:ellipsis">
                @Html.Raw(HttpUtility.HtmlDecode(item.Content))
            </div>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Blog_Id }) |
            @Html.ActionLink("Blogpost", "BlogPost", new { id = item.Blog_Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Blog_Id })
        </td>
    </tr>
}

</table>
