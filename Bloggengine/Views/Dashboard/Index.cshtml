@using Bloggengine.Models
@model IEnumerable<Bloggengine.Models.Blogs>

<div>
    @Html.Partial("_Yourblogpartial")
</div>
<h4 class="text-danger">@ViewBag.Message </h4>
<h4 class="text-success">@ViewBag.success @TempData["msg"]</h4>
<div class="panel panel-body">
    <h2>Blog Feed</h2>

    @foreach (var item in Model)
    {
        <div class="container-fluid" style="border-color: black">
            <div class="row">
                <div class="col-sm-2" style="margin-top: 30px">
                    <img src="@Url.Content(item.Images)" width="100" height="100" style="border: black"/>
                </div>

                <div class="col-sm-10">
                    <div class="row">
                        <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    </div>
                    <div class="row">
                        <h6>Author | @Html.DisplayFor(modelItem => item.Author)  Posted On | @Html.DisplayFor(modelItem => item.Posted)</h6>
                    </div>
                    <div class="row" style="max-height:100px; overflow: hidden; text-overflow:ellipsis">
                        @Html.Raw(HttpUtility.HtmlDecode(item.Content))
                    </div>
                    <a href="@Url.Action("BlogPost","Blogs", new{id=item.Blog_Id})">Read more</a>
                </div>
            </div>

        </div>
     }

</div>




